---
interface Props{
    href?: string;
}

const {href} = Astro.props
---

<li>
    <a href={href} 
      class="flex gap-4
      text-zinc-400
      fill-zinc-400 
      hover:text-zinc-100
      hover:fill-zinc-100
        items-center
        py-2
        px-4 font-medium 
        transition duration-300"
         >
       
        <slot/>

    </a>
</li>
